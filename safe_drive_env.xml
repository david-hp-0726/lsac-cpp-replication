<mujoco model="safe_drive_env">
    <compiler angle="degree" coordinate="local" autolimits="true" />
    <option timestep="0.01" gravity="0 0 -9.8" />
    <asset>
        <!-- Checker texture: green and white -->
        <texture name="field" type="2d" builtin="checker" width="512" height="512"
             rgb1="0.1 0.5 0.1" rgb2="0.2 0.6 0.2" />
        <material name="field_mat" texture="field" texrepeat="10 6" />
    </asset>
    <default>
        <default class="wheel">
            <geom type="cylinder" size=".06 .03" rgba=".5 .5 1 1" friction="5 0.1 0.1"/>
        </default>
    </default>
    <worldbody>
        <!-- Static Objects -->
        <geom name="floor" type="plane" size="8 5 0.1" rgba="0.4 0.8 0.4 1" material="field_mat" />
        <!-- The left wall is centered at z=0.1, so it's z position ranges from z=0 to z=0.2 -->
        <!-- The left wall is 0.2 m in length, 8.2 m in width, 0.2 m in height -->
        <geom name="wall_left" type="box" size="0.1 4.1 0.1" rgba="0.6 0.6 0.6 1" pos="-7.6 0 0.1" />
        <geom name="wall_right" type="box" size="0.1 4.1 0.1" rgba="0.6 0.6 0.6 1" pos="7.6 0 0.1" />
        <geom name="wall_bottom" type="box" size="7.5 0.1 0.1" rgba="0.6 0.6 0.6 1" pos="0 -4.1 0.1" />
        <geom name="wall_top" type="box" size="7.5 0.1 0.1" rgba="0.6 0.6 0.6 1" pos="0 4.1 0.1" />
        <geom name="brick1" type="box" size="0.35 0.25 0.25" pos="2 1.5 0.15" quat="0.5 0 0 1" rgba="0.8 0.2 0.2 1"/>
        <geom name="brick2" type="box" size="0.35 0.25 0.25" pos="1 -2.5 0.15" quat="0.1 0 0 1" rgba="0.8 0.2 0.2 1"/>
        <geom name="brick3" type="box" size="0.35 0.25 0.25" pos="-1 -0.5 0.15" quat="-0.2 0 0 1" rgba="0.8 0.2 0.2 1"/>
        <geom name="brick4" type="box" size="0.35 0.25 0.25" pos="-2 2.5 0.15" quat="0.6 0 0 1" rgba="0.8 0.2 0.2 1"/>
        <!-- Random Obstacles -->
        <body name="rand_box1" pos="2 -1 0.15">
            <geom name="rand_box1_geom" type="box" size="0.5 0.5 0.25" rgba="1 1 1 1"
          contype="1" conaffinity="1"
          solref="0.02 1" solimp="0.9 0.95 0.001"/>
        </body>
        <body name="rand_box2" pos="4 2 0.15">
            <geom name="rand_box2_geom" type="box" size="0.4 0.3 0.25" rgba="1 1 1 1"
          contype="1" conaffinity="1"
          solref="0.02 1" solimp="0.9 0.95 0.001" quat="1 0 0 1"/>
        </body>
        <body name="rand_box3" pos="-2 -2.5 0.15">
            <geom name="rand_box3_geom" type="box" size="0.4 0.3 0.25" rgba="1 1 1 1"
          contype="1" conaffinity="1"
          solref="0.02 1" solimp="0.9 0.95 0.001"/>
        </body>
        <!-- Car -->
        <body name="car" pos="-5 0 0.12">
            <freejoint />
            <geom name="chassis" type="box" size="0.25 0.2 0.06" rgba="0.5 0.5 0.5 1" pos="0 0 0.18"/>
            <body name="front_left_wheel" pos="0.19 0.17 0.06" zaxis="0 1 0">
                <geom class="wheel"/>
                <joint name="front_left" type="hinge" axis="0 0 1" />
            </body>
            <body name="front_right_wheel" pos="0.19 -0.17 0.06" zaxis="0 1 0">
                <geom class="wheel"/>
                <joint name="front_right" type="hinge" axis="0 0 1" />
            </body>
            <body name="back_left_wheel" pos="-0.19 0.17 0.06" zaxis="0 1 0">
                <geom class="wheel" />
                <joint name="back_left" type="hinge" axis="0 0 1" />
            </body>
            <body name="back_right_wheel" pos="-0.19 -0.17 0.06" zaxis="0 1 0">
                <geom class="wheel" />
                <joint name="back_right" type="hinge" axis="0 0 1" />
            </body>
        </body>
    </worldbody>
    <tendon>
        <fixed name="forward">
            <joint joint="front_left" coef="1" />
            <joint joint="front_right" coef="1" />
            <joint joint="back_left" coef="1" />
            <joint joint="back_right" coef="1" />
        </fixed>
        <fixed name="turn">
            <joint joint="front_left" coef="-1.5" />
            <joint joint="front_right" coef="1.5" />
            <joint joint="back_left" coef="-1.5" />
            <joint joint="back_right" coef="1.5" />
        </fixed>
    </tendon>
    <actuator>
        <motor name="forward" tendon="forward" ctrlrange="-1 1" />
        <motor name="turn" tendon="turn" ctrlrange="-1 1" />
    </actuator>
</mujoco>